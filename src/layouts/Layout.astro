---
import { SEO } from "astro-seo";

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { 
	title, 
	description = "Evos - Juegos de mesa para estimular los sentidos",
	image = "URL_DE_TU_IMAGEN_POR_DEFECTO"
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<SEO
			title={title}
			description={description}
			openGraph={{
				basic: {
					title: title,
					type: "website",
					image: image,
				}
			}}
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://use.typekit.net/bfo3lly.css">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	/* Estilos base */
	html {
		font-family: var(--text);
		background: var(--background-color);
	}

	body {
		margin: 0;
		padding: 0;
		font-family: var(--text);
		line-height: 1.6;
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>