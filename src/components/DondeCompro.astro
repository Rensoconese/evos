---
interface Props {
    titulo: string;
    mercadoLibreLink: string;
}

import { Picture } from 'astro:assets';
import whatsappIcon from '../assets/images/whatsapp.png';
import mercadolibreIcon from '../assets/images/mercadolibre.png';

const { titulo, mercadoLibreLink } = Astro.props;
const whatsappNumber = "+5491166280074";
const whatsappLink = `https://wa.me/${whatsappNumber}`;
---
<div class="dondecompro_container">
<section class="donde-compro">
    <h2>{titulo}</h2>
    <p class="bajada">A trav√©s de Mercado Libre o venta directa por WhatsApp </p>
    
    <div class="canales">
        <a href={mercadoLibreLink} class="canal" target="_blank" rel="noopener noreferrer">
            <Picture src={mercadolibreIcon} alt="Mercado Libre" 
            widths={[80, 128]}
            sizes="(max-width: 390px) 80px, 128px"
            formats={['webp', 'avif', 'png']}/>
            
        </a>
        
        <a href={whatsappLink} class="canal" target="_blank" rel="noopener noreferrer">
            <Picture src={whatsappIcon} alt="WhatsApp" width="100" height="100" 
            widths={[80, 100]}
            sizes="(max-width: 390px) 80px, 100px"
            formats={['webp', 'avif', 'png'] }   
            />
           
        </a>
    </div>
</section>
</div>

